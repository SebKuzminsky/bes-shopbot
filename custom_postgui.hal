###EMC2.4.2 Configuration for Shopbot-Ultra, developed at Boulder Engineering Studio, July 2010

# ######################################################
# pyvcp relavent threads
# ######################################################
loadrt toggle count=7
addf toggle.0 servo-thread
addf toggle.1 servo-thread
addf toggle.2 servo-thread
addf toggle.3 servo-thread
addf toggle.4 servo-thread
addf toggle.5 servo-thread
addf toggle.6 servo-thread

loadrt sum2 count=4
addf sum2.0 servo-thread
addf sum2.1 servo-thread
addf sum2.2 servo-thread
addf sum2.3 servo-thread

loadrt conv_s32_float count=8
addf conv-s32-float.0 servo-thread
addf conv-s32-float.1 servo-thread
addf conv-s32-float.2 servo-thread
addf conv-s32-float.3 servo-thread
addf conv-s32-float.4 servo-thread
addf conv-s32-float.5 servo-thread
addf conv-s32-float.6 servo-thread
addf conv-s32-float.7 servo-thread

## or2 is already being loaded in shopbot-config.hal, if it weren't we'd put this line here: loadrt or2 count=3
addf or2.1 servo-thread
addf or2.2 servo-thread

#loadrt scale count=5 #scale is already being loaded in shopbot-config.hal
addf scale.0 servo-thread


loadrt abs count=1
addf abs.0 servo-thread

loadrt and2 count=9
addf and2.0 servo-thread
addf and2.1 servo-thread
addf and2.2 servo-thread
addf and2.3 servo-thread
addf and2.4 servo-thread
addf and2.5 servo-thread
addf and2.6 servo-thread
addf and2.7 servo-thread
addf and2.8 servo-thread


# ######################################################
# Arduino Interface
# ######################################################
loadusr -Wn arduino /home/bes/emc2/configs/shopbot-config-1/arduino /dev/ttyUSB0 3

#Arduino pin connections
net ain0 arduino.analog-in-00 => #pyvcp.analog-in-00 pyvcp.analog-in-00b
net ain1 arduino.analog-in-01 => #pyvcp.analog-in-01 pyvcp.analog-in-01b
net ain2 arduino.analog-in-02 => #pyvcp.analog-in-02 pyvcp.analog-in-02b
net ain3 arduino.analog-in-03 => #pyvcp.analog-in-03 pyvcp.analog-in-03b
net ain4 arduino.analog-in-04 => #pyvcp.analog-in-04 pyvcp.analog-in-04b
net ain5 arduino.analog-in-05 => #pyvcp.analog-in-05 pyvcp.analog-in-05b
net din0 arduino.digital-in-08 => #pyvcp.digital-in-08
net din1 arduino.digital-in-12 => #pyvcp.digital-in-12
net din2 arduino.digital-in-13 => #pyvcp.digital-in-13
net aout0 arduino.analog-out-03 => #pyvcp.analog-out-03-f
net aout1 arduino.analog-out-05 => #pyvcp.analog-out-05-f
net aout2 arduino.analog-out-06 => #pyvcp.analog-out-06-f
#net aout3 arduino.analog-out-09 => pyvcp.analog-out-09-f
net aout4 arduino.analog-out-10 => #pyvcp.analog-out-10-f
net aout5 arduino.analog-out-11 => #pyvcp.analog-out-11-f
net dout0 arduino.digital-out-02 <= #pyvcp.digital-out-02
net dout1 arduino.digital-out-04 <= #pyvcp.digital-out-04
net dout2 arduino.digital-out-07 <= #pyvcp.digital-out-07
setp arduino.digital-in-08-pullup 1
setp arduino.digital-in-12-pullup 1
setp arduino.digital-in-13-pullup 1

#Spindle Control
setp scale.0.gain 0.000277778 #origional line
#setp scale.0.gain 0.014111111
net spindle-speed-scale motion.spindle-speed-out => scale.0.in
net spindle-speed-freq scale.0.out => abs.0.in
net spindle-speed-freq-abs abs.0.out => arduino.analog-out-09


